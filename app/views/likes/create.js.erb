$("#likes_form-<%=@like.micropost_id%>").html("<%= escape_javascript(render( partial: 'microposts/unlike_form', locals: {micropost: Micropost.find(@like.micropost_id) })) %>");
<% if Micropost.find(@like.micropost_id).likes.count == 1 %>
	$("#likes-<%=@like.micropost_id%>").html('<%= link_to (User.find(@like.user_id).name + 'likes this'), likes_micropost_path(@like.micropost_id)%>');
<% end %>
<% if Micropost.find(@like.micropost_id).likes.count > 1 %>
	$("#likes-<%=@like.micropost_id%>").html('<%= link_to (
    Micropost.find(@like.micropost_id).likes.sample.user.name + ' and ' + pluralize((Micropost.find(@like.micropost_id).likes.count) -1, 'other' + ' like this')), likes_micropost_path(@like.micropost_id) %>');
<% end %>
