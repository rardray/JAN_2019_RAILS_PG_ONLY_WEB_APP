<!DOCTYPE html>
<html>
	<head>
		<title><%= full_title(yield(:title)) %></title>
		<%= render 'layouts/rails_default' %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		<div class="container">
			<%= render 'layouts/flash_message'%>
			<%= yield %>
			<%= render 'layouts/footer' %>
			<%= debug(params) if Rails.env.development? %>
		</div>
	</body>
</html>
<script>
	function mobileSizing() {
		var containers = document.querySelector('.container')
		if ($(window).height() > $(window).width()) {
			return containers.style.margin = '0px', console.log(containers.style.margin)
	
		} else {
			containers.style.marginLeft = '115px';
			containers.style.marginRight = '115px';
		}
	}
	window.addEventListener('resize', mobileSizing)
	mobileSizing()
</script>
